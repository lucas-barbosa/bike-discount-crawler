  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "./", /* Specify the base directory to resolve non-relative module names. */
    "outDir": "dist",
    "paths": {
      "#api/*": ["./src/api/*"],
      "#callbacks/*": ["./src/callbacks/*"],
      "#crawlers/*": ["./src/crawlers/*"],
