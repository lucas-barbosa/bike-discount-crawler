{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "./", /* Specify the base directory to resolve non-relative module names. */
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@entities/*": [
        "./src/types/*"
      ],
      "@queue/*": [
        "./src/queue/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
    }
  },
  "include": [
    "./src/**/*"
  ]
}